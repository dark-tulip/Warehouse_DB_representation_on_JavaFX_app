<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>

<!--  Страница СОТРУДНИКИ  -->
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.demo1.StaffView"
      prefHeight="400.0" prefWidth="600.0">

    <!--  Подключаем  стили-->
    <stylesheets><URL value="@stylesheet.css"/></stylesheets>
    <padding><Insets bottom="15.0" left="25.0" right="25.0" top="15.0"/></padding>
    <Label fx:id="mainTitle" text="Сотрудники"/>

    <!--  Информация о сотруднике из базы данных в соответствии с существующими колонами -->
    <TextField id="FirstName"     fx:id="firstName"/>
    <TextField id="LastName"      fx:id="lastName" />
    <TextField id="StaffPosition" fx:id="StaffPosition"/>
    <TextField id="StaffPhone"    fx:id="StaffPhone"/>

    <Label fx:id="subTitle" text="Информатия о сотрудниках, работающих на складе"/>

    <Button mnemonicParsing="false" onAction="#onSubmitButtonClick" prefHeight="25.0" prefWidth="150.0" text="Следующая запись" />
</VBox>
